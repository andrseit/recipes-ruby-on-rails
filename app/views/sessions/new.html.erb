<%= render 'shared/page_title', title: "Log in" %>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
	<div class="form-group">
		<div class="col-form-label col-md-2">
			<%= f.label :email %>
		</div>
		<div class="col-md-8">
			<%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter your email" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-form-label col-md-2">
			<%= f.label :password %>
		</div>
		<div class="col-md-8">
			<%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Enter your password" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<%= f.submit("Log in", class: "btn btn-primary btn-lg") %>
		</div>
	</div>
	<div class="col-md-4 offset-md-2">
		[ <%= link_to "Don't have an account? Sign up now!", signup_path %>]
	</div>
<% end %>